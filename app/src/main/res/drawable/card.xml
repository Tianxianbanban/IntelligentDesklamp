<?xml version="1.0" encoding="utf-8"?>
<!--
自定义卡片样式
应用于效率部分任务列表
-->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 设置背景填充色 -->
    <solid android:color="@color/colorWhite" />
    <!-- 设置边框宽度为1dp，边框颜色 -->
    <stroke
        android:width="0.1dp"
        android:color="@color/colorDarkgray" />
    <!-- 设置按钮圆角半径为25dp -->
    <corners
        android:radius="10dp" />
</shape>