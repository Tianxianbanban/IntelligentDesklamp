<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="tenRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ten_rating_bar</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxHeight">20dp</item>
    </style>

    <style name="MyToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
    </style>

    <style name="pop_anim_music" parent="android:Animation">
        <item name="android:windowEnterAnimation">@animator/pop_music_enter_anim</item>
        <item name="android:windowExitAnimation">@animator/pop_music_exit_anim</item>
    </style>

    <style name="pop_anim_current_info" parent="android:Animation">
        <item name="android:windowEnterAnimation">@animator/pop_current_info_enter</item>
        <item name="android:windowExitAnimation">@animator/pop_current_info_exit</item>
    </style>


    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <!--<item name="colorControlNormal">@color/indigo</item>-->
        <item name="colorControlActivated">@color/colorBlack</item>
    </style>


</resources>
