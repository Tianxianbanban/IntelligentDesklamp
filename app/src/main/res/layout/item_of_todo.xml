<?xml version="1.0" encoding="utf-8" ?>
<com.daimajia.swipe.SwipeLayout
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lv_todo_item_swipe"
    android:layout_width="match_parent"
    android:minHeight="130dp"
    android:maxHeight="130dp"
    android:layout_height="130dp"
    swipe:leftEdgeSwipeOffset="0dp"
    swipe:rightEdgeSwipeOffset="0dp">

    <!--BottomViews-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <!--<Button-->
            <!--android:id="@+id/bt_todo_item_edit"-->
            <!--android:text="编辑"-->
            <!--android:background="@color/colorLightBlue"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="match_parent" />-->
        <Button
            android:id="@+id/bt_todo_item_confirm_finish"
            android:text="完成"
            android:background="@color/colorLightBlue"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/bt_todo_item_delete"
            android:text="删除"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/colorRed"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

    <!--SurfaceViews-->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:background="@drawable/card"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginLeft="30dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/round_small"
                        android:layout_width="12dp"
                        android:layout_height="12dp" />
                    <TextView
                        android:id="@+id/tx_itemoftodo_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:textSize="30sp"
                        android:textColor="@color/colorBlack"
                        android:text="待办内容"
                        android:maxLines="2"
                        android:layout_weight="5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tx_itemoftodo_time"
                        android:layout_gravity="center_vertical"
                        android:text="----"
                        android:layout_marginRight="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/image_itemoftodo_finish"
                android:visibility="invisible"
                android:background="@drawable/finish"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="60dp"
                android:layout_width="80dp"
                android:layout_height="80dp" />

        </FrameLayout>


    </LinearLayout>

</com.daimajia.swipe.SwipeLayout>
